{
  "plugins": ["@shufo/prettier-plugin-blade", "@prettier/plugin-php"],
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "parser": "blade",
        "tabWidth": 4
      }
    },
  {
      "files": ["*.php"],
      "options": {
          "phpVersion": "8.1",
          "printWidth": 120,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": true,
          "trailingCommaPHP": true,
          "braceStyle": "psr-2",
          "requirePragma": false,
          "insertPragma": false
      }
  }
  ]
}
